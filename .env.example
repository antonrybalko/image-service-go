# Image Service Environment Configuration

# Core Service Configuration
ENVIRONMENT=development  # development or production
PORT=8080                # HTTP port to listen on

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=image_service
DB_SSLMODE=disable       # disable, require, verify-ca, verify-full

# S3 Storage Configuration
S3_REGION=us-east-1
S3_BUCKET=images
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=             # Optional: for custom S3-compatible endpoints (e.g., MinIO, LocalStack)
S3_CDN_BASE_URL=         # Optional: CDN URL (e.g., https://cdn.example.com)
S3_USE_PATH_STYLE=false  # true for MinIO/LocalStack, false for AWS S3

# JWT Authentication Configuration (choose one authentication method)
JWT_ALGORITHM=RS256      # RS256 or HS256
JWT_PUBLIC_KEY_URL=      # Required for RS256: URL to JWKS endpoint
JWT_SECRET=              # Required for HS256: shared secret

# Image Configuration
IMAGE_CONFIG_PATH=config/images.yaml  # Path to image configuration file

# Optional: Override config file path
CONFIG_FILE=             # Optional: path to config file (YAML/JSON)
